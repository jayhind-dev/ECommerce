    })

    function ProductbySubcatid() {
  
        var id = getUrlVars();
        $.ajax({
            url: '/Home/GetAllProductbySubCat_id',
            type: 'POST',
            data: { Id: id.subcategory_id},
            success: function (data) {
                debugger;
              $('#Div_Partial').html(data);
            },
            error: function () {
                alert("error");
            }
        });

    }

    function getUrlVars() {
        var vars = [], hash;
        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < hashes.length; i++) {
            hash = hashes[i].split('=');
            vars.push(hash[0]);
            vars[hash[0]] = hash[1];
        }
        return vars;
    }
</script>